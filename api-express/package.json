  "scripts": {
    "pre:dev": "npm run prisma-setup && cross-env NODE_ENV=development npx prisma db push && node ./scripts/copy-schema-to-app-side.js && npm run format && npm run typecheck",
    "dev": "npm run pre:dev && NODE_ENV=development PORT=5179 tsx watch ./src/index.ts",
    "dev-cronjobs": "npm run pre:dev && NODE_ENV=development PORT=5179 tsx watch ./src/index.ts",
    "start": "cross-env NODE_ENV=production npm run prisma-setup && npm run prisma-deploy && PORT=5179 tsx ./src/index.ts",
    "start-pm2": "cross-env NODE_ENV=production npm run prisma-setup && npm run prisma-deploy && PORT=5179 tsx ./src/index.ts",
    "start-local": "cross-env NODE_ENV=development npm run prisma-setup && npm run prisma-deploy && PORT=5179 tsx ./src/index.ts",
    "start-cronjobs": "cross-env NODE_ENV=production npm run prisma-setup && npm run prisma-deploy && tsx ./src/cronjobs/index.ts",
    "prisma-setup": "prisma generate && prisma migrate deploy",
    "prisma-create-migration": "NODE_ENV=development DATABASE_URL=postgresql://postgres@localhost/quizz_du_berger_temp npx prisma migrate dev --name",
    "prisma-deploy": "NODE_ENV=production npx prisma migrate deploy",
    "prisma-reset-db": "rm -rf prisma/migrations && npx prisma migrate reset --force && npm run prisma-setup",
    "typecheck": "tsc -b",
    "format": "prettier --write . --ignore-unknown",
    "get-all-translations": "tsx ./scripts/get-all-translations.ts",
    "start-backup-db": "tsx ./db-backup/cron.ts",
    "backup-db": "tsx ./db-backup/execute.ts",
    "download-backup": "tsx ./db-backup/download-backup.ts"
